{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",    
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Jest w/ Coverage",
      "type": "node",
      "request": "launch",     
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
        "--coverage",
        "--watch"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}